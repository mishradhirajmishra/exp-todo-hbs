
    <div class="container">
        <div class="col-xl-8 offset-md-2">
            <h1 class="text-center">{{title}}</h1>
            <form action="/auth/register" method="post" enctype="multipart/form-data">
                <div class="form-group"><label for="name">Name:</label><input class="form-control" id="name" type="text"
                        placeholder="Enter Name" name="name" value=""></div>
                <div class="form-group"><label for="email">Email:</label><input class="form-control" id="email"
                        type="email" name="email" value=""></div>
                <div class="form-group"><label for="image">Image:</label><input class="form-control" id="image"
                        type="file" name="image"></div>
                <div class="form-group"><label for="password">Password:</label><input class="form-control" id="password"
                        type="password" name="password" value=""></div>
                <div class="form-group"><label for="password2">Password:</label><input class="form-control"
                        id="password2" type="password" name="password2" value=""></div>
                <div class="form-group"><button class="btn btn-primary" type="submit">Submit</button></div>
            </form>
        </div>
    </div>
